void setup() {
  //Init serial.
  Serial.begin(9600);

  //Print to serial if unable to set OLED.
  if (!display.begin(SSD1306_SWITCHCAPVCC, 0x3C)) {
    Serial.println(F("SSD1306 allocation failed"));
    for (;;);
  }

  //Clear the oled display.
  display.clearDisplay();
  display.setTextColor(WHITE);

  //Define pin inputs.
  pinMode(8, INPUT_PULLUP);
  pinMode(9, INPUT_PULLUP);
  pinMode(10, INPUT_PULLUP);
  pinMode(11, INPUT_PULLUP);
}

void readSerialData() {
  //If serial buffer has data available.
  while (Serial.available() > 0) {
    //Char array to store serial data.
    static char serialStream[25];
    //Array position.
    static unsigned int streamPos = 0;
    //Char to store serial data.
    char checkCon = Serial.read();
    //If the serial doesn't read "\n", store the char to the array and increment position.
    if (checkCon != '\n') {
      serialStream[streamPos] = checkCon;
      streamPos++;
    }
    //Contains "\n" which we use to define the end of the stream.
    //Read the initial char and act based on this.
    else {
      /*
      "1" is sent from the application to let us know it has detected the module.
      "0" is sent by the application upon exiting, this lets us know we have disconnected, resume initial routine.
      "2" is used to define the time stream, assign it to a string to display time.
      "3" identifies application launch and gives us filename.
      "4" is sent to clear displayText.
      */
      switch (serialStream[0]) {

        case '1':
          connected = true;
          break;

        case '0':
          connected = false;
          timeStr = "";
          displayText = "";
          break;
          
        case '2':
          timeStr = serialStream;
          timeStr = timeStr.substring(1, 6);
          break;
        
        case '3':
          displayText = serialStream;
          displayText = displayText.substring(1, 25);
          break;

        case '4':
          displayText = "";
          break;
          }
      //Finished, reset stream position.
      streamPos = 0;
    }
  }
}

void loop() {

  //Clear screen on each loop.
  display.clearDisplay();

  //Define our buttons.
  int b1 = digitalRead(8);
  int b2 = digitalRead(9);
  int b3 = digitalRead(10);
  int b4 = digitalRead(11);

  //Read incoming serial data.
  readSerialData();

  //Device not connected.
  if (!connected) {
    conState = "Not Connected!";
    printToSerial("EB13378421FF4B5EA8394B41E94EEE5A");
    display.drawBitmap(0, 5, usbDisconnected, 128, 64, WHITE);
  }

  //We are connected, display this on screen and detect button presses,
  //When received, just print to serial which button has been pressed to be detected by the application.
  else {
    conState = "Connected!";
    if (displayText != "") {
      display.setTextSize(1);
      display.setCursor(0, 30);
      display.println("Launching");
      display.setCursor(10, 40);
      display.println(displayText);
    } else {
      display.drawBitmap(0, 5, pressButton, 128, 64, WHITE);
    }
    if (b1 == LOW) { printToSerial("HKB1"); }
    if (b2 == LOW) { printToSerial("HKB2"); }
    if (b3 == LOW) { printToSerial("HKB3"); }
    if (b4 == LOW) { printToSerial("HKB4"); }
  }

  //timeStr has been established (thus we have the time), display it.
  if (timeStr != "") {
    display.setTextSize(1);
    display.setCursor(95, 0);
    display.println(timeStr);
  }

  //Set our conState (Connected/Not connected).
  display.setTextSize(1);
  display.setCursor(0, 0);
  display.println(conState);

  display.display();
  delay(100);
}